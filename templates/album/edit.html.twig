{% extends 'base.html.twig' %}

{% block title %}Edit Album{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    {# Header Section #}
    <div class="mb-8">
        <h1 class="text-4xl font-bold tracking-tight text-indigo-600 mb-2">Edit Album</h1>
        <p class="text-xl text-gray-600">
            Editing: <span class="font-semibold text-black">{{ album.title }}</span> by <span class="font-semibold text-black">{{ album.artist }}</span>
        </p>
    </div>

    {# Form Card #}
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 mb-4">
        {{ include('album/_form.html.twig', {'button_label': 'Update Album'}) }}
    </div>

    {# Action Buttons #}
    <div class="flex flex-wrap items-center gap-2">
        <a href="{{ path('app_album_show', {'id': album.id}) }}" class="inline-block px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            Back to Album
        </a>
        {{ include('album/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
