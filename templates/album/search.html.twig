{% extends 'base.html.twig' %}

{% block title %}Album Search{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold tracking-tight text-indigo-600">Album Search</h1>
            <p class="mt-2 text-xl text-gray-600">Filter by Title/Artist/Genre and rating</p>
        </div>
    </div>

    <form method="get" action="{{ path('app_album_search') }}" class="bg-white rounded-lg shadow-md p-6 border border-gray-200 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label for="album" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                <input id="album" name="album" type="text" value="{{ album }}" placeholder="e.g. The Highlights"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" />
            </div>
            <div>
                <label for="artist" class="block text-sm font-medium text-gray-700 mb-1">Artist</label>
                <input id="artist" name="artist" type="text" value="{{ artist }}" placeholder="e.g. Taylor Swift"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" />
            </div>
            <div>
                <label for="genre" class="block text-sm font-medium text-gray-700 mb-1">Genre</label>
                <input id="genre" name="genre" type="text" value="{{ genre }}" placeholder="e.g. Pop"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" />
            </div>
            <div>
                <label for="minRating" class="block text-sm font-medium text-gray-700 mb-1">Min rating</label>
                <input id="minRating" name="minRating" type="number" step="0.1" min="0" max="5" value="{{ minRating }}" placeholder="0.0"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" />
            </div>
            <div>
                <label for="maxRating" class="block text-sm font-medium text-gray-700 mb-1">Max rating</label>
                <input id="maxRating" name="maxRating" type="number" step="0.1" min="0" max="5" value="{{ maxRating }}" placeholder="5.0"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" />
            </div>
        </div>
        <div class="mt-4 flex items-center gap-3">
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">Search</button>
            <a href="{{ path('app_album_search') }}" class="px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">Reset</a>
            <a href="{{ path('app_album_index') }}" class="ml-auto px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">Back to Albums</a>
        </div>
    </form>

    {% if albums|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for album in albums %}
                <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                    {% if album.coverName %}
                        <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-100 max-w-32 mx-auto">
                            <img src="{{ vich_uploader_asset(album, 'coverFile') }}" alt="{{ album.title }}" class="w-full h-full object-cover">
                        </div>
                    {% else %}
                        <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-200 max-w-32 mx-auto flex items-center justify-center">
                            <span class="text-4xl text-gray-400">{{ album.title|first|upper }}</span>
                        </div>
                    {% endif %}
                    <div>
                        <h3 class="text-xl font-bold text-black mb-2 line-clamp-2">{{ album.title }}</h3>
                        <p class="text-gray-700 font-medium mb-1">
                            <span class="text-gray-500">Artist:</span> {{ album.artist }}
                        </p>
                        <p class="text-gray-700 mb-2">
                            <span class="text-gray-500">Genre:</span> {{ album.genre }}
                        </p>
                        <div class="flex items-center gap-2 mb-4">
                            <span class="text-sm text-gray-600">Rating:</span>
                            <div class="flex items-center">
                                {% if album.averageRating %}
                                    {% for i in 1..5 %}
                                        {% if i <= album.averageRating %}
                                            <span class="text-yellow-400 text-lg">★</span>
                                        {% else %}
                                            <span class="text-gray-300 text-lg">★</span>
                                        {% endif %}
                                    {% endfor %}
                                    <span class="ml-2 text-sm text-gray-600">({{ album.averageRating|number_format(1) }})</span>
                                {% else %}
                                    <span class="text-gray-400 text-sm">No ratings yet</span>
                                {% endif %}
                            </div>
                        </div>
                        {% if album.trackList %}
                            <p class="text-sm text-gray-600 mb-4 line-clamp-2">
                                <span class="font-medium">Tracks:</span> {{ album.trackList }}
                            </p>
                        {% endif %}

                        <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between">
                            <a href="{{ path('app_album_show', {'id': album.id}) }}" class="text-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                View
                            </a>
                            <div class="flex gap-2">
                                {% if is_granted('edit_album', album) %}
                                    <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="text-center px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                                        Edit
                                    </a>
                                {% endif %}
                                {% if is_granted('delete_album', album) %}
                                    {{ include ('album/_delete_form.html.twig') }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow-md border border-gray-200">
            <p class="text-xl text-gray-600 mb-4">No albums found, try a different search.</p>
        </div>
    {% endif %}
</div>
{% endblock %}