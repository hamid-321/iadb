{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    {# Header Section #}
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold tracking-tight text-indigo-600">All Albums</h1>
            <p class="mt-2 text-xl text-gray-600">Browse the albums</p>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_album_new') }}" class="px-3 py-3 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                Create New Album
            </a>
        {% endif %}
    </div>

    {# Album Grid #}
    {% if albums|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for album in albums %}
                <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                    {% if album.cover %}
                        <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-100">
                            <img src="{{ album.cover }}" alt="{{ album.title }}" class="w-full h-full object-cover">
                        </div>
                    {% endif %}

                    {# Album Info #}
                    <div>
                        <h3 class="text-xl font-bold text-black mb-2 line-clamp-2">{{ album.title }}</h3>
                        <p class="text-gray-700 font-medium mb-1">
                            <span class="text-gray-500">Artist:</span> {{ album.artist }}
                        </p>
                        <p class="text-gray-700 mb-2">
                            <span class="text-gray-500">Genre:</span> {{ album.genre }}
                        </p>
                        
                        {# Rating #}
                        <div class="flex items-center gap-2 mb-4">
                            <span class="text-sm text-gray-600">Rating:</span>
                            <div class="flex items-center">
                                {% if album.averageRating %}
                                    {% for i in 1..5 %}
                                        {% if i <= album.averageRating %}
                                            <span class="text-yellow-400 text-lg">★</span>
                                        {% else %}
                                            <span class="text-gray-300 text-lg">★</span>
                                        {% endif %}
                                    {% endfor %}
                                    <span class="ml-2 text-sm text-gray-600">({{ album.averageRating|number_format(1) }})</span>
                                {% else %}
                                    <span class="text-gray-400 text-sm">No ratings yet</span>
                                {% endif %}
                            </div>
                        </div>

                        {# Track List Preview #}
                        {% if album.trackList %}
                            <p class="text-sm text-gray-600 mb-4 line-clamp-2">
                                <span class="font-medium">Tracks:</span> {{ album.trackList }}
                            </p>
                        {% endif %}

                        {# Action Buttons #}
                        <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between">
                            <a href="{{ path('app_album_show', {'id': album.id}) }}" class="text-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                View
                            </a>
                            <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="text-center px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                                Edit
                            </a>
                            {{ include('album/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow-md border border-gray-200">
            <p class="text-xl text-gray-600 mb-4">No albums found.</p>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_album_new') }}" class="inline-block px-6 py-3 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    Create Your First Album
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
