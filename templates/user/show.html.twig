{% extends 'base.html.twig' %}

{% block title %}{{ user.email }}{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold tracking-tight text-indigo-600 mb-2">{{ user.email }}</h1>
        <p class="text-xl text-gray-600">User Profile</p>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6 mb-4 border border-gray-200 hover:shadow-lg transition-shadow">
        {# Profile Picture #}
        <div class="mb-6">
            {% if user.profilePictureName %}
                <div class="w-32 h-32 rounded-lg overflow-hidden bg-gray-100 mx-auto">
                    <img src="{{ vich_uploader_asset(user, 'profilePictureFile') }}" alt="{{ user.email }}" class="w-full h-full object-cover">
                </div>
            {% else %}
                <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-200 max-w-32 mx-auto flex items-center justify-center">
                    <span class="text-4xl text-gray-400">{{ user.email|first|upper }}</span>
                </div>
            {% endif %}
        </div>

        <div class="mb-6">
                <div class="mb-4">
                    <p class="text-gray-900 leading-relaxed mb-2">
                        <span class="font-medium text-gray-700">Email:</span> {{ user.email }}
                    </p>
                    <p class="text-gray-900 leading-relaxed mb-2">
                        <span class="font-medium text-gray-700">User ID:</span> {{ user.id }}
                    </p>
                    
                    <div class="mb-4">
                        <span class="font-medium text-gray-700 block mb-2">Roles:</span>
                        <div class="flex flex-wrap gap-2">
                            {% for role in user.roles %}
                                <span class="inline-flex items-center px-2.5 py-0.5 text-md text-gray-600">
                                    {{ role|replace({'ROLE_': ''}) }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
        </div>

        <div class="mt-4 pt-4 border-t border-gray-200 flex gap-2">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                Edit User
            </a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
    
    <div class="flex flex-wrap items-center gap-2">
        <a href="{{ path('app_user_index') }}" class="inline-block px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            Back to Users
        </a>
    </div>
</div>
{% endblock %}
