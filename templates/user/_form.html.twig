{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div>
        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-100 dark:text-black shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
    </div>

    {% if is_granted('user_admin') %}
        <div>
            {{ form_label(form.roles, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
            <div class="flex flex-wrap gap-3">
                {% for child in form.roles %}
                    <label class="relative flex items-center cursor-pointer">
                        {{ form_widget(child, {'attr': {'class': 'sr-only peer'}}) }}
                        <div class="flex items-center gap-2 px-4 py-2.5 border-2 border-gray-300 rounded-lg transition-all hover:border-indigo-300 hover:bg-gray-50 peer-checked:border-indigo-500 peer-checked:bg-indigo-50">
                            <span class="text-sm font-medium text-gray-700 peer-checked:text-indigo-700">{{ child.vars.label }}</span>
                        </div>
                    </label>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div>
        {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-100 dark:text-black shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
    </div>

    <div>
        {{ form_label(form.profilePictureFile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.profilePictureFile, {'attr': {'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-100 dark:text-black shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
    </div>

    <div class="pt-4">
        <button type="submit" class="w-full sm:w-auto px-6 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            {{ button_label|default('Create User') }}
        </button>
    </div>
    {# dont load hidden fields if not admin #}
    {% if is_granted('user_admin') %}
        {{ form_rest(form) }}
    {% else %}
        {{ form_widget(form._token) }} {# render token since it wont be rendered otherwise due to render_rest: false #}
    {% endif %}
{{ form_end(form, {'render_rest': false}) }}
