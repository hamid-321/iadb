{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold tracking-tight text-indigo-600">All Users</h1>
            <p class="mt-2 text-xl text-gray-600">Manage user accounts</p>
        </div>
        <a href="{{ path('app_user_new') }}" class="px-3 py-3 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            Create New User
        </a>
    </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for user in users %}
                <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                    {# Profile Picture #}
                    {% if user.profilePicture %}
                        <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-100 max-w-32 mx-auto">
                            <img src="{{ user.profilePicture }}" alt="{{ user.email }}" class="w-full h-full object-cover">
                        </div>
                    {% else %}
                        <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-200 max-w-32 mx-auto flex items-center justify-center">
                            <span class="text-4xl text-gray-400">{{ user.email|first|upper }}</span>
                        </div>
                    {% endif %}
                    <div>
                        <h3 class="text-xl font-bold text-black mb-2">{{ user.email }}</h3>
                        <p class="text-gray-700 mb-1">
                            <span class="text-gray-500">ID:</span> {{ user.id }}
                        </p>
                        <div class="mb-4">
                            <span class="text-gray-500 text-sm">Roles:</span>
                            <div class="flex flex-wrap gap-2 mt-1">
                                {% for role in user.roles %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 text-md text-gray-600">
                                        {{ role|replace({'ROLE_': ''}) }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                View
                            </a>
                            <div class="flex gap-2">
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-center px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                                    Edit
                                </a>
                                {{ include('user/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
