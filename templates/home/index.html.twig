{% extends 'base.html.twig' %}

{% block title %}AIDb - Home{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    
    {# Welcome Message #}
    <h1 class="text-4xl font-bold tracking-tight text-indigo-600">
        Hi {% if app.user %}{{ app.user.displayName | default(app.user.email) }}{% else %}Guest{% endif %},
    </h1>
    <p class="mt-2 text-xl text-black">
        Welcome to AIDB, the best place for album reviews + info.
    </p>

    {# Album List #}
    <h2 class="text-2xl font-bold tracking-tight text-black mt-8">
        All Albums
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
        {% for album in AllAlbums %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-xl font-bold text-black">{{ album.title }}</h3>
                <p class="mt-2 text-black">Artist: {{ album.artist }}</p>
                <p class="mt-2 text-black">Genre: {{ album.genre }}</p>
                <p class="mt-2 text-black">Average Rating: {{ album.averageRating }} <span class="text-yellow-400">â˜…</span></p>
                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <a href="{{ path('app_album_show', {id: album.id}) }}" class="block w-full text-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        View
                    </a>
                </div>
            </div>
        {% else %}
            <p class="text-black">No albums found.</p>
        {% endfor %}
    </div>
</div> 
{% endblock %}
