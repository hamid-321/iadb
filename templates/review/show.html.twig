<div>
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold tracking-tight text-indigo-600">Reviews</h2>
        {% if is_granted('create_review', album) %}
            <a href="{{ path('app_review_new', {'id': album.id}) }}" class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                Add Review
            </a>
        {% endif %}
    </div>
    
    {% if album.reviews|length > 0 %}
        <div class="space-y-4">
            {% for review in album.reviews %}
                <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                            <div class="mb-2 flex items-center gap-2">
                                {% if review.reviewer.profilePictureName %}
                                    <div class="mb-4 aspect-square rounded-lg overflow-hidden bg-gray-100 max-w-10">
                                        <img src="{{ vich_uploader_asset(review.reviewer, 'profilePictureFile') }}" alt="{{ review.reviewer.email }}" class="w-full h-full object-cover">
                                    </div>
                                {% endif %}
                                <span class="font-semibold text-black">{{ review.reviewer.email }}</span>
                            </div>
                            {% if review.timestamp %}
                                <span class="text-sm text-gray-500 mb-2 block">{{ review.timestamp|date('F j, Y') }}</span>
                            {% endif %}
                            <div class="flex items-center gap-1">
                                {% for i in 1..5 %}
                                    {% if i <= review.rating %}
                                        <span class="text-yellow-400 text-lg">★</span>
                                    {% else %}
                                        <span class="text-gray-300 text-lg">★</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        {% if review.reviewText %}
                            <p class="text-gray-900 leading-relaxed">{{ review.reviewText }}</p>
                        {% else %}
                            <p class="text-gray-500 italic">No review text provided.</p>
                        {% endif %}
                    </div>
                    {% if is_granted('edit_review', review) %}
                        <div class="mt-4 pt-4 border-t border-gray-200 flex gap-2">
                            <a href="{{ path('app_review_edit', {'id': review.id}) }}" class="px-4 py-2 bg-gray-100 text-black text-sm font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                                Edit Review
                            </a>
                            {% if is_granted('delete_review', review) %}
                                {{ include ('review/_delete_form.html.twig') }}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-12 text-center">
            <p class="text-xl text-gray-600 mb-4">No reviews yet.</p>
            {% if is_granted('create_review', album) %}
                <p class="text-gray-500 mb-4">Be the first to review this album!</p>
                <a href="{{ path('app_review_new', {'id': album.id}) }}" class="inline-block px-6 py-3 bg-indigo-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    Write the First Review
                </a>
            {% else %}
                <p class="text-gray-500">Sign in to write the first review!</p>
            {% endif %}
        </div>
    {% endif %}
</div>
